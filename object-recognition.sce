function TakePhoto(handles)
    n = camopen(0);
    S = camread(n); //get a frame
    imshow(S);
    camcloseall();
    handles.S = S;
    handles = resume(handles);
endfunction

function LiveWebcam(handles)
    n = camopen(0);
    im = camread(n); //get a frame
    imshow(im);
    tic();
    for cnt = 1:150
        im = camread(n);
        imshow(im);
    end
    t = toc();
    disp("FPS : " + string(100/t));
    handles.S = S;
    handles = resume(handles);
endfunction

function ZoomIn(handles)
    im = handles.S;
    a=a-10;
    b=b-10;
    disp(a);
    disp(b);
    zoom = imcrop(im, [c,d, a, b]);
    c=c-10;
    d=d-10; 
    imshow(zoom)
endfunction

function ZoomOut(handles)
    im = handles.S;
    imshow(im)
endfunction
